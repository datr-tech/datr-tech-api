{
  "arrowParens": "always",
  "bracketSpacing": true,
  "importOrder": [
    "<BUILTIN_MODULES>",
    "",
    "<THIRD_PARTY_MODULES>",
    "",
    "^@/(.*)$",
    "",
    "^[./]"
  ],
  "importOrderParserPlugins": ["typescript"],
  "importOrderTypeScriptVersion": "5.2.2",
  "insertPragma": false,
  "overrides": [
    {
      "files": [".env.TEMPLATE"],
      "options": {
        "parser": "sh"
      }
    },
    {
      "files": [".mailmap"],
      "options": {
        "parser": "sh"
      }
    }
  ],
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-sh",
    "prettier-plugin-sort-json"
  ],
  "printWidth": 90,
  "proseWrap": "always",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false
}
