{
  "name": "@datr.tech/datr-tech-web-api",
  "description": "API for datr-tech-web",
  "version": "0.3.0",
  "private": false,
  "homepage": "https://github.com/datr.tech/datr-tech-web-api",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datr.tech/datr-tech-web-api.git"
  },
  "keywords": [
    "@app-dtwa",
    "@datr.tech",
    "api",
    "express",
    "express-validator",
    "typescript"
  ],
  "license": "MIT",
  "author": "admin <admin@datr.tech>",
  "main": "./dist/index.js",
  "engines": {
    "node": ">=20.0.9",
    "npm": ">=10.1.0"
  },
  "scripts": {
    "build": "npx tsc && npx resolve-tspaths",
    "changelog": "npx auto-changelog",
    "changelog:add": "git add ./CHANGELOG.md",
    "changelog:commit": "git commit -m 'ci: update changelog' --no-verify",
    "clean": "npx rimraf ./coverage/* ./dist/*",
    "commit-msg": "commitlint --edit",
    "dev": "npx tsx watch ./src/index.ts",
    "format": "npm run format:check",
    "format:check": "npm-run-all format:config format:src format:scripts",
    "format:write": "npm-run-all format:config:write format:src:write format:scripts:write",
    "format:config": "npm run format:config:check",
    "format:config:base": "npx prettier './*.{cjs,js,json,mjs,ts}'",
    "format:config:check": "npm run format:config:base -- --check",
    "format:config:write": "npm run format:config:base -- --write",
    "format:src": "npm run format:src:check",
    "format:src:base": "npx prettier './src/**/*.{json,ts}'",
    "format:src:check": "npm run format:src:base -- --check",
    "format:src:write": "npm run format:src:base -- --write",
    "format:scripts": "npm run format:scripts:check",
    "format:scripts:base": "npx prettier ./scripts/*.sh",
    "format:scripts:check": "npm run format:scripts:base -- --check",
    "format:scripts:write": "npm run format:scripts:base -- --write",
    "husky:init": "npx husky",
    "lint": "npm run lint:check",
    "lint:check": "npm-run-all lint:src lint:scripts",
    "lint:write": "npm run lint:src:write",
    "lint:src": "npm run lint:src:check",
    "lint:src:base": "npx eslint ./src",
    "lint:src:check": "npm run lint:src:base",
    "lint:src:write": "npm run lint:src:base -- --fix",
    "lint:scripts": "npm run lint:scripts:check",
    "lint:scripts:check": "npx shellcheck ./scripts/*.sh",
    "postbuild": "tsc-alias -p ./tsconfig.json",
    "postchangelog": "npm-run-all changelog:add changelog:commit",
    "postinstall": "npm-run-all husky:init template:env:cp",
    "postversion": "git push origin master --tags --no-verify",
    "prebuild": "npm run clean",
    "prechangelog": "git add ./package.json",
    "precommit": "npm-run-all format lint spell",
    "prepush": "npm run lint",
    "preversion": "npm-run-all format lint spell",
    "spell": "npx cspell .",
    "start": "node ./dist/index.js",
    "temp:check": "./scripts/post_email_subject_to_exim_mta.sh",
    "template:env": "./scripts/generate_conf_template.sh .env",
    "template:env:cp": "sh -c 'cp ./.env.TEMPLATE ./.env'",
    "test": "npm run test:unit",
    "test:it": "npx jest -c ./jest.config.integration.json ./test/integration",
    "test:unit": "npx jest --runInBand --detectOpenHandles -c ./jest.config.unit.json ./test/unit --coverage",
    "version": "npm-run-all build changelog"
  },
  "dependencies": {
    "@datr.tech/leith-common-logger": "^0.4.0",
    "@datr.tech/leith-common-services": "^0.4.2",
    "@datr.tech/leith-config-api-router-options": "^0.4.0",
    "@types/node": "^22.7.6",
    "dotenv": "^16.4.7",
    "express": "^4.21.0",
    "express-healthcheck": "^0.1.0",
    "express-validator": "^7.2.1",
    "nodemailer": "^7.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.10.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.13",
    "auto-changelog": "^2.5.0",
    "cspell": "^8.18.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-sh": "^0.17.4",
    "prettier-plugin-sort-json": "^4.1.1",
    "resolve-tspaths": "^0.8.23",
    "rimraf": "^6.0.1",
    "shellcheck": "^3.1.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.15",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0"
  }
}
